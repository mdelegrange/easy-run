<div class="container">
  <% if current_user.photo.present? %>
    <%= cl_image_tag(current_user.photo, height: 300, width: 300, crop: :fill, alt: "user avatar",  class: "img-circle")%>
  <% else %>
  <%= image_tag "user.png", alt: "user avatar", height: 300, class: "img-circle"%>
  <% end %>

  <h1> Your Profile </h1>
  <p>First name : <%= @user.first_name %></p>
  <p>Last name : <%= @user.last_name %></p>
  <p>Email : <%= @user.email %></p>
  <p>Password : <% @user.encrypted_password %></p>

  <%= link_to 'Edit', edit_profile_path %>

</div>
