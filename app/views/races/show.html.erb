<div class="banner" style="background-image: linear-gradient(to right, rgba(10, 207, 254, 0.7) 0%, rgba(73, 90, 255, 0.7) 100%), url(<%= image_path 'quiz-run.jpg'%>);">
  <div class="container race-results">
    <div class="row text-center">
      <h2 style="color: white">Vous avez choisi la course suivante</h2>
      <h3><%= @race.event_name %> / <%= @race.name  %> / <%= @race.distance %> / <%= @race.date %></h3>
    </div>

    <div class="row race-selector-4 text-center">
      <h2 style="color: white">Sélectionnez d'autres courses pour vous entraîner</h2>

    </div>
    <div class="row race-selector-1">
      <h4>Sélectionnez un 10km en <%= @race1_10km.date.month %>/<%= @race1_10km.date.year.to_s.split('').last(2).join %></h4>
      
          <%= link_to race_runs_path(@race1_10km), method: :post  do %>
            <div class="col-xs-12 col-sm-3">
              <div class="card-race-results-1 card-race-results-<%=@race1_10km.distance%>">
                <div class="card-race-results-detail card-race-results-detail-<%=@race1_10km.distance%>">
                  <h3><%=@race1_10km.event_name  %></h3>
                  <h4><%=@race1_10km.name%></h4>
                </div>
                <p><%=@race1_10km.distance%> m</p>
                <div class="overlay overlay-<%=@race1_10km.distance%>">
                  <div class="text">
                    <p style="font-weight: bold">Sélectionner cette course</p>
                    <p style="font-size: 40px"><i class="far fa-hand-point-up"></i></p>
                  </div>
                </div>
              </div>
              <div class="card-date-result card-date-results-<%=@race1_10km.distance%>">
                <div>
                  <h4 class="date-details"><%=@race1_10km.date.day%></h4>
                  <h4 class="date-details"><%=@race1_10km.date.strftime("%B").first(3)%></h4>
                  <h4 class="date-details"><%=@race1_10km.date.year%></h4>
                </div>
              </div>
            </div>
          <% end %>
       
    </div>
    <div class="row race-selector-2">
      <h4>Sélectionnez un 10km en <%=@race2_10km.date.month %>/<%=@race2_10km.date.year.to_s.split('').last(2).join%></h4>
     
          <%= link_to race_runs_path(@race2_10km), method: :post  do %>
            <div class="col-xs-12 col-sm-3">
              <div class="card-race-results-2 card-race-results-<%=@race2_10km.distance%>">
                <div class="card-race-results-detail card-race-results-detail-<%=@race2_10km.distance%>">
                  <h3><%=@race2_10km.event_name  %></h3>
                  <h4><%=@race2_10km.name%></h4>
                </div>
                <p><%=@race2_10km.distance%> m</p>
                <div class="overlay overlay-<%=@race2_10km.distance%>">
                  <div class="text">
                    <p style="font-weight: bold">Sélectionner cette course</p>
                    <p style="font-size: 40px"><i class="far fa-hand-point-up"></i></p>
                  </div>
                </div>
              </div>
              <div class="card-date-result card-date-results-<%=@race2_10km.distance%>">
                <div>
                  <h4 class="date-details"><%=@race2_10km.date.day%></h4>
                  <h4 class="date-details"><%=@race2_10km.date.strftime("%B").first(3)%></h4>
                  <h4 class="date-details"><%=@race2_10km.date.year%></h4>
                </div>
              </div>
            </div>
          <% end %>
       
    </div>
    <div class="row race-selector-3">
      <h4>Sélectionnez un semi-marathon en <%=@race3_semi.date.month %>/<%=@race3_semi.date.year.to_s.split('').last(2).join%><h4>
      
          <%= link_to race_runs_path(@race3_semi), method: :post  do %>
            <div class="col-xs-12 col-sm-3">
              <div class="card-race-results-3 card-race-results-<%=@race3_semi.distance%>">
                <div class="card-race-results-detail card-race-results-detail-<%=@race3_semi.distance%>">
                  <h3><%=@race3_semi.event_name  %></h3>
                  <h4><%=@race3_semi.name%></h4>
                </div>
                <p><%=@race3_semi.distance%> m</p>
                <div class="overlay overlay-<%=@race3_semi.distance%>">
                  <div class="text">
                    <p style="font-weight: bold">Sélectionner cette course</p>
                    <p style="font-size: 40px"><i class="far fa-hand-point-up"></i></p>
                  </div>
                </div>
              </div>
              <div class="card-date-result card-date-results-<%=@race3_semi.distance%>">
                <div>
                  <h4 class="date-details"><%=@race3_semi.date.day%></h4>
                  <h4 class="date-details"><%=@race3_semi.date.strftime("%B").first(3)%></h4>
                  <h4 class="date-details"><%=@race3_semi.date.year%></h4>
                </div>
              </div>
            </div>
          <% end %>
        
    </div>
    <div class="row race-selector-4 text-center hidden">
      <h3>Voir vos courses</h3>
      <%= link_to "Courses", objective_runs_path(@objective), class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
</div>

