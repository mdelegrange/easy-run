<div class = "banner-new-races">
  <div class="dash-flexbox dash-flex-column text-center">
      <%= form_tag new_objective_run_path, method: :get do %>
        <div class="form-group">
          <h2>Choisissez un département</h2>
          <%= select_tag "department", options_for_select(@departments_options), class: "form-control", prompt: '-'%>
        </div>
        <div class="form-group">
            <div class="form-group">
              <h2>Choisissez une distance</h2>
              <%= select_tag "distance", options_for_select(@distances_options), class: "form-control", prompt: '-'%>
            </div>
          <%= submit_tag "TROUVER UNE COURSE", :class => "btn btn-primary btn-primary-er" %>
        </div>
        <%end%>
  </div>
</div>
<div class="container race-results">
  <div class="row">
      <% if @races_to_display.count.zero? && params[:department] != nil %>
        <h3 class="text-center">Il n'y a pas de course correspondant à votre recherche</h3>
      <% else %>
        <% @races_to_display.each do |race| %>
          <%= link_to race_runs_path(race), method: :post  do %>
            <div class="col-xs-12 col-sm-3">
              <%= render partial: "shared/cards", locals: {race: race} %>
            </div>
          <% end %>
        <% end %>
      <% end %>
  </div>
</div>
